<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExerciseResultsFragment">

    <!-- First Column -->
    <!-- Max Weight Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_max_weight"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Weight Lifted"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_max_weight_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Weight Date"
                android:textSize="12sp"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/tv_max_weight_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Weight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/tv_max_weight_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout max weight"
                android:textSize="12sp"
                android:textColor="@color/dark_blue" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Max Rep Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_max_rep"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/card_max_weight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Reps in One Set"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                 />

            <TextView
                android:id="@+id/tv_max_reps_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Max Reps date"
                android:layout_gravity="center"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/tv_max_reps_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Reps in one set"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/tv_max_reps_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Max Reps"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/dark_blue" />



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Second Column -->
    <!-- 1 rep max card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/one_max_rep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Calculated One Max Rep"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_one_max_rep_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Workout Max Reps Date"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_one_max_rep_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="One Max Rep"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_one_max_rep_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Workout One Max Rep"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <!-- Total Rep in one workout Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_total_rep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one_max_rep"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Reps in Workout"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_total_reps_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Max Reps Date"
                android:textSize="12sp"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_total_reps_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Reps"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_total_reps_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Total Reps"
                android:textSize="12sp"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Volume Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_exercise_volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_total_rep">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Workout Volume"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_exercise_volume_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Volume Date"
                android:textSize="12sp"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_exercise_volume_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Volume"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_exercise_volume_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Exercise Volume"
                android:textSize="12sp"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Max Set Volume Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_max_set_volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/card_max_rep">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Set Volume"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_max_set_volume_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Max Set Volume Date"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_max_set_volume_value_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Set Volume"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_max_set_volume_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Max Set Volume"
                android:textSize="12sp"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_exercise_volume">

        <TextView
            android:id="@+id/tv_chart_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_chart_description"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_max_set_volume"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!-- Guideline -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
